<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralQuery">

    <TextView
        android:id="@+id/enterQueryTitle"
        android:layout_width="156dp"
        android:layout_height="33dp"
        android:layout_marginTop="191dp"
        android:layout_marginBottom="19dp"
        android:text="Enter Query Below:"
        app:layout_constraintBottom_toTopOf="@+id/editGeneralQuery"
        app:layout_constraintStart_toStartOf="@+id/editGeneralQuery"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editGeneralQuery"
        android:layout_width="216dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/btnQuerySubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterQueryTitle" />

    <Button
        android:id="@+id/btnQuerySubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="231dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editGeneralQuery" />

</android.support.constraint.ConstraintLayout>